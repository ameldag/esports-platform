<div class="relative bg-black pt-0 pb-0 px-0 sm:px-0 lg:pt-0 lg:pb-0 lg:px-0 h-full">

    <div class="z-0 header w-full relative h-64">
        <!-- <div class="cover"> -->
        <img src="/images/eSports.jpg" alt="" class="object-cover h-60 w-full">
        <!-- </div> -->
        <div class="overlay absolute top-0 left-0 bottom-0 right-0 dark-gradient"
            style="background: linear-gradient(rgba(17,18,23,0),#000);">

        </div>
    </div>

    <div class="z-10 relative w-full team-infos grid grid-cols-3 -mt-40 text-white">
        <div class="col-span-3 mb-5">
            <div class=" flex flex-wrap justify-center content-center">
                <img src="/images/1v1.jpg" alt="" class="h-36 w-36 rounded-lg border-4">
            </div>
            <div class=" flex flex-wrap justify-center content-center text-3xl text-white font-bold">
                <%= @challenge.game.name %>
            </div>
        </div>

    </div>

    <div class="bg-transparent border-b border-gray-600 mx-5 py-2 my-5 px-5">

        <div class="grid grid-cols-2 gap-4 py-2">
            <div class="">
                <a href="<%= show_challenge_path(@challenge.id) %>"
                    class="whitespace-no-wrap py-4 px-1 border-b-4 border-transparent font-medium text-sm leading-5 text-gray-500 hover:text-gray-700 hover:border-purple-800 focus:outline-none focus:text-purple-800 focus:border-purple-800">
                    Overview
                </a>
                <a href="<%= show_challenge_members_path(@game, @challenge.id) %>"
                    class="whitespace-no-wrap ml-8 py-4 px-1 border-b-4 border-transparent font-medium text-sm leading-5 text-gray-500 hover:text-gray-700 hover:border-purple-800 focus:outline-none focus:text-purple-800 focus:border-purple-800">
                    Members
                </a>
                <a href="<%= show_challenge_stats_path(@game, @challenge.id) %>"
                    class="whitespace-no-wrap ml-8 py-4 px-1 border-b-4 border-transparent font-medium text-sm leading-5 text-gray-500 hover:text-gray-700 hover:border-purple-800 focus:outline-none focus:text-purple-800 focus:border-purple-800">
                    Stats
                </a>
            </div>
        </div>

    </div>

    <div class="bg-black text-white py-5 px-10">

        <%= render "challenge/partials/members" %>

    </div>

</div>