<% if (@activities.count > 0) %>
<% @activities.each do |activity| %>
<% if activity.owner %>

<div class="activities-list">

    <!-- Activity box -->
    <div class="bg-gray-900 shadow rounded-md p-5 mb-5" v-for="i in 10" v-bind:key="i">
        <!-- Activity details section -->
        <div class="flex items-center">
            <div>
                <img class="inline-block h-12 w-12 rounded-full"
                    src="https://image.freepik.com/vecteurs-libre/esports-logo-assassin-team_70404-18.jpg" alt="" />
            </div>
            <div class="ml-3">
                <p class="text-sm leading-5 font-medium text-gray-500 group-hover:text-gray-900">
                    <% if activity.owner_type == "User" %>
                    <%= link_to activity.owner.username, show_user_path(activity.owner.id) %>
                    <% elsif activity.owner_type == "Roster" %>
                    <%= link_to activity.owner.name, show_user_path(activity.owner.id) %>
                    <% end %>

                    <%= render_activity(activity) %>
                </p>
                <p
                    class="text-xs leading-4 font-medium text-gray-500 group-hover:text-gray-700 group-focus:underline transition ease-in-out duration-150">
                    <%= activity.created_at %>
                </p>
            </div>
        </div>
    </div>
<% end %>
<% end %>
<% else %>
    <div class="text-center text-gray-600">
        <div class="md:flex md:justify-center mb-6">
            <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                fill="currentColor">
                <path fill-rule="evenodd"
                    d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                    clip-rule="evenodd" />
            </svg>
        </div>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-sm md:mt-5 sm:text-sm md:max-w-2xl">
            No Activities
        </p>
    </div>
<% end %>