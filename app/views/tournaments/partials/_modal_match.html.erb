 <%= javascript_pack_tag "modal",  'data-turbolinks-track' => false %>
<!-- component -->
<div class="main-modal fixed w-full h-100 inset-0 z-50 overflow-hidden flex justify-center items-center animated fadeIn faster"
    style="background: rgba(0,0,0,.7);" id="match-modal" role="dialog">
    <div
        class="border border-teal-500 shadow-lg modal-container bg-white w-11/12 xl:max-w-xl mx-auto rounded shadow-lg z-50 mt-20 overflow-y-auto">
        <div class="modal-content py-4 text-center px-6 bg-gray-800">
            <!--Title-->
            <div class="flex justify-between items-center pb-3">
                <p class="text-white text-2xl font-bold "><%= t "tournaments.matches.label" %> <%= match.id %></p>
                <div class="modal-close cursor-pointer z-50">
                    <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                        viewBox="0 0 18 18">
                        <path
                            d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z">
                        </path>
                    </svg>
                </div>
                </div>
            <!--Body-->
            <div class="my-5">
                <div class="m-2 flex flex-row justify-center content-center">
                    <div class="pr-5 text-xs leading-5 font-medium text-white truncate py-2 m-2">
                        <% if match.planned_at %>
                        <%= match.planned_at.strftime("%H:%M") %>
                        <% end %>
                    </div>
                    <div class="text-sm leading-5 font-medium text-gray-500  truncate py-2 m-2">
                        <% if match.left_team %>
                        <%= match.left_team.name %>
                        <% else %> <%= t "activerecord.notice.waiting_decided" %>
                        <% end %>
                    </div>

                    <div class="text-sm leading-5 font-medium text-indigo-600 truncate py-2 m-2">
                        <% if match.left_score %>
                        <%= match.left_score %>
                        <% else %> 0
                        <% end %>
                    </div>
                    <div
                        class="bg-green-500 text-white text-xs px-4 py-1 rounded-full  px-4 pb-0.5 shadow py-1 m-4 text-gray-200 font-bold ">
                        <% if match.state %>
                        <%= t("tournaments.matches.status.#{match.state}") %>
                        <% else %> <%= t "activerecord.notice.waiting" %>
                        <% end %>
                    </div>
                    <div class="text-sm leading-5 font-medium text-gray-500  truncate py-2 m-2">
                        <% if match.right_team %>
                        <%= match.right_team.name %>
                        <% else %> <%= t "activerecord.notice.waiting_decided" %>
                        <% end %>
                    </div>
                    <div class="text-sm leading-5 font-medium text-indigo-600 truncate py-2 m-2">
                        <% if match.right_score %>
                        <%= match.right_score %>
                        <% else %> 0
                        <% end %>
                    </div>
                </div>
                <% if (current_user.rosters.exists?(match.left_team) || current_user.rosters.exists?(match.right_team)) %>
                    <% if match.state != "pending" %>
                    <div class="flex justify-end pt-2">
                        <%= button_to t("tournaments.submit_score.submit"), submit_score_path, class: "focus:outline-none px-2 bg-teal-500 text-sm p-1 ml-1 rounded-xl text-white hover:bg-teal-400" %>
                    </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
