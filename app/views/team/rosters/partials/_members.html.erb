<div class="members pb-60">
    <!-- Title name -->
    <% if (@rosters.count > 0) %>
    <h2 class="text-white font-bold text-2xl mb-3"><%= @team.name %><%= t 'team.label.roster_title'%></h2>
    <!-- Title name end -->

    <!-- members box -->
    <div class="members-box grid grid-cols-4 text-center ">

        <% @rosters.each do |roster| %>
        <!-- member block -->
        <div class="flex-1 flex flex-col mt-6">
            <a href="<%= team_show_roster_path(roster.team_id, roster.id) %>"
                class="flex-shrink-0 group block focus:outline-none">
                <% if roster.cover.attached? %>
                <img class="w-32 h-32 flex-shrink-0 mx-auto bg-black rounded-full" src="<%= url_for(roster.cover) %>"
                    alt />
                <% else %>
                <img class="w-32 h-32 flex-shrink-0 mx-auto bg-black rounded-full" src="/images/icons/no-game.png"
                    alt />
                <% end %>
                <h3
                    class="mt-6 text-white-900 text-sm leading-5 group-hover:text-gray-400 group-focus:underline transition ease-in-out duration-150 font-medium">
                    <%= roster.name %></h3>
                <dl class="mt-1 flex-grow flex flex-col justify-between">
                    <dt class="sr-only">Title</dt>
                    <dd class="text-gray-500 text-sm leading-5"> <%= t 'global.signed_up'%> <%= time_ago_in_words(roster.created_at) %>
                    </dd>
                    <dt class="sr-only">Role</dt>

                    <% if (roster.team.owner_id == current_user.id) %>
                    <dd class="mt-3">
                        <%= link_to team_edit_roster_path(roster.id) do %>
                        <span class="px-2 py-1 text-teal-800 text-xs leading-4 font-medium bg-teal-100 rounded-full">
                            <%= t 'team.rosters.submit.edit'%>
                        </span>
                        <% end %>
                    </dd>
                    <% end %>
                </dl>
            </a>
        </div>
        <!-- member block end -->
        <% end %>

    </div>
    <% else %>
    <div class="m-8 text-center">
        <svg class=" text-gray-500 inline-block h-8 w-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
            fill="currentColor">
            <path
                d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
        </svg>

        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-sm md:mt-5 sm:text-sm md:max-w-2xl">
            <%= t 'activerecord.errors.messages.empty_roster'%> </p>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-sm md:mt-5 sm:text-sm md:max-w-2xl">
           <%= t 'activerecord.errors.messages.register_rosters'%>
        </p>

    </div>
    <% end %>
    <!-- members box end -->
</div>