<div class="bg-gray-800">
    <div class="md:flex md:items-center md:justify-between px-10 py-5 bg-orange-500">
        <div class="sm:flex sm:justify-center lg:justify-start">
            <div class="mt-3 sm:mt-0 sm:ml-3">
                <h2 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:leading-9 sm:truncate">
                    Teams
                </h2>
            </div>
            <div class=" sm:mt-0 sm:ml-3">
                <%= form_tag teams_path(), method: :get ,  remote: true do %>
                <div class=" relative mx-auto text-gray-600">
                    <%= search_field_tag :search, params[:search], placeholder: "Search", class: "border-2 border-gray-500 bg-gray-800 h-10 px-5 pr-16 rounded-lg text-sm text-white  focus:outline-none" %>
                    <%= button_tag "", class: "absolute right-0 top-0 mt-5 mr-4", name: nil %>
                </div>
                <% end %>
            </div>
        </div>

        <div class=" sm:ml-48">
            <%= paginate @teams %>
        </div>

        <div class="mt-4 flex md:mt-0 md:ml-4">
            <span class="ml-3 shadow-sm rounded-md">
                <a href="<%= new_team_path() %>">
                    <button type="button"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-gray-600 hover:bg-gray-500 focus:outline-none focus:shadow-outline-gray focus:border-gray-700 active:bg-gray-700 transition duration-150 ease-in-out">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" clip-rule="evenodd"
                                d="M10 5C10.5523 5 11 5.44772 11 6V9L14 9C14.5523 9 15 9.44772 15 10C15 10.5523 14.5523 11 14 11H11V14C11 14.5523 10.5523 15 10 15C9.44771 15 9 14.5523 9 14V11H6C5.44772 11 5 10.5523 5 10C5 9.44771 5.44772 9 6 9L9 9V6C9 5.44772 9.44771 5 10 5Z"
                                fill="#FFFAF0" />
                        </svg>
                        Create New Team
                    </button>
            </span>
            </a>

            </span>
        </div>

    </div>

    <% if (@teams.count > 0) %>
    <div id="blogteam-list" class="min-h-screen max-w-7xl mx-auto px-4 sm:px-6 md:px-2 py-10">
        <div class="mt-2 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none">
            <% 1.times do %>
            <% @teams.each do |team| %>

            <div
                class="bg-black rounded-md overflow-hidden shadow-md transform hover:scale-110 transition duration-150 ease-in-out">
                <div class="team-cover relative">

                    <% if team.cover.attached? %>
                    <img src="<%= url_for(team.cover) %>" alt="" class="h-40 w-full object-cover">
                    <% else %>
                    <img src="/images/icons/no-game.png" alt="" class="h-40 w-full object-cover">
                    <% end %>

                    <div class="absolute top-0 left-0 bottom-0 right-0"
                        style="background: linear-gradient(rgba(17,18,23,0),#000);">
                    </div>
                </div>

                <div class="flex-1 bg-black p-3 flex flex-col justify-between">
                    <div class="mt-0 flex items-center">
                        <div class="flex-shrink-0">
                            <a href="<%= show_team_path(team) %>">
                                <% if team.avatar.attached? %>
                                <img class="h-10 w-10 rounded-full" src="<%= url_for(team.avatar) %>" alt="" />
                                <% else %>
                                <img class="h-10 w-10 rounded-full object-cover" src="/images/icons/no-game.png"
                                    alt="" />
                                <% end %>
                            </a>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm leading-5 font-bold text-gray-200">
                                <a href="<%= show_team_path(team) %>" class="">
                                    <%= team.name %>
                                </a>
                            </p>
                            <div class="flex text-sm leading-5 text-gray-500">
                                <time datetime="2020-03-16">
                                    Joined on <%= team.created_at.strftime("%F") %>
                                </time>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% end %>
            <% end %>
        </div>

    </div>
    <!-- start serach results block -->
    <div id="search-results">

    </div>

    <% else %>
    <div class="border-2 border-dashed border-white text-white text-2xl font-bold rounded-md shadow text-center p-10">
        There are no teams yet. Maybe you want to <a href="<%= new_team_path() %>"
            class="bg-orange-500 rounded-md px-3 py-1">create one</a>?
    </div>
    <% end %>
    <!-- /End replace -->
</div>