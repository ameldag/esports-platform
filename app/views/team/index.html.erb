<div class="bg-gray-800 h-full">
    <div class="md:flex md:items-center md:justify-between px-10 py-5 bg-orange-500">
        <div class="flex-1 min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:leading-9 sm:truncate">
                Teams
            </h2>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4">
            <span class="ml-3 shadow-sm rounded-md">
                <router-link to="/teams/new">
                    <button type="button"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-gray-700 hover:bg-gray-600 focus:outline-none focus:shadow-outline-gray focus:border-gray-600 active:bg-gray-600 transition duration-150 ease-in-out">
                        Create New Team
                    </button>
                </router-link>
            </span>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 py-10">
        <!-- Replace with your content -->

        <% if (@teams.count > 0) %>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul>
                <li v-for="team in teams" :key="team.id">
                    <a href="#"
                        class="block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out">
                        <div class="px-4 py-4 flex items-center sm:px-6">
                            <div class="min-w-0 flex-1 sm:flex sm:items-center sm:justify-between">
                                <div>
                                    <div class="text-sm leading-5 font-medium text-indigo-600 truncate">
                                        {{team.name}}
                                        <span class="ml-1 font-normal text-gray-500">
                                            in CSGO:Opposing Force
                                        </span>
                                    </div>
                                    <div class="mt-2 flex">
                                        <div class="flex items-center text-sm leading-5 text-gray-500">
                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor"
                                                viewBox="0 0 20 20">
                                                <path fill-rule="evenodd"
                                                    d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                            <span>
                                                Last played on
                                                <time
                                                    datetime="2020-01-07">{{moment(team.updatedAt).format('LL')}}</time>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 flex-shrink-0 sm:mt-0">
                                    <div class="flex overflow-hidden">
                                        <img class="inline-block h-6 w-6 rounded-full text-white shadow-solid"
                                            src="https://images.unsplash.com/photo-1491528323818-fdd1faba62cc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
                                            alt="" />
                                        <img class="-ml-1 inline-block h-6 w-6 rounded-full text-white shadow-solid"
                                            src="https://images.unsplash.com/photo-1550525811-e5869dd03032?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
                                            alt="" />
                                        <img class="-ml-1 inline-block h-6 w-6 rounded-full text-white shadow-solid"
                                            src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.25&w=256&h=256&q=80"
                                            alt="" />
                                        <img class="-ml-1 inline-block h-6 w-6 rounded-full text-white shadow-solid"
                                            src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
                                            alt="" />
                                    </div>
                                </div>
                            </div>
                            <div class="ml-5 flex-shrink-0">
                                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                        clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </a>
                </li>
            </ul>

            <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
                <div class="hidden sm:block">
                    <p class="text-sm leading-5 text-gray-700">
                        Showing
                        <span class="font-medium">{{pagingCounter}}</span>
                        to
                        <span class="font-medium">{{ pagingCounter + teams.length -1 }}</span>
                        of
                        <span class="font-medium">{{totalDocs}}</span>
                        results
                    </p>
                </div>
                <div class="flex-1 flex justify-between sm:justify-end">
                    <button v-if="hasPrevPage" @click="loadPage(prevPage)"
                        class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
                        Previous
                    </button>
                    <button v-if="hasNextPage" @click="loadPage(nextPage)"
                        class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
                        Next
                    </button>
                </div>
            </div>
        </div>
        <% else %>
        <div class="border-2 border-dashed border-white text-white text-2xl font-bold rounded-md shadow text-center p-10">
            There are no teams yet. Maybe you want to <a href="/teams/create" class="bg-orange-500 rounded-md px-3 py-1">create one</a>?
        </div>
        <% end %>
        <!-- /End replace -->
    </div>
</div>