<div class="bg-gray-800">
    <div class="md:flex md:items-center md:justify-between px-10 py-5 bg-orange-500">
        <div class="sm:flex sm:justify-center lg:justify-start">
            <div class="mt-3 sm:mt-0 sm:ml-3">
                <h2 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:leading-9 sm:truncate">
                  <%= t 'team.label.title'%>
                </h2>
            </div>
            <div class=" sm:mt-0 sm:ml-3">
                <%= form_tag teams_path(), method: :get, remote: true do %>
                <div class=" relative mx-auto text-gray-600">
                    <%= search_field_tag :search, params[:search], placeholder: "#{I18n.t 'team.label.search'}" , class: "border-2 border-gray-500 bg-gray-800 h-10 px-5 pr-16 rounded-lg text-sm text-white  focus:outline-none" %>
                    <%= button_tag "", class: "absolute right-0 top-0 mt-5 mr-4", name: nil %>
                </div>
                <% end %>
            </div>
        </div>

        <div id="paginator" class="sm:ml-48 text-white text-xs">
            <%= paginate @teams, remote: true %>
        </div>

        <div class="mt-1 flex md:mt-0 md:ml-0">
            <span class="ml-3 shadow-sm rounded-md">
                <a href="<%= new_team_path() %>">
                    <button type="button"
                        class="inline-flex items-center px-2 py-2 border border-transparent text-xs leading-5 font-medium rounded-md text-white bg-gray-600 hover:bg-gray-500 focus:outline-none focus:shadow-outline-gray focus:border-gray-700 active:bg-gray-700 transition duration-150 ease-in-out">
                        <svg class=" pl-1 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" clip-rule="evenodd"
                                d="M10 5C10.5523 5 11 5.44772 11 6V9L14 9C14.5523 9 15 9.44772 15 10C15 10.5523 14.5523 11 14 11H11V14C11 14.5523 10.5523 15 10 15C9.44771 15 9 14.5523 9 14V11H6C5.44772 11 5 10.5523 5 10C5 9.44771 5.44772 9 6 9L9 9V6C9 5.44772 9.44771 5 10 5Z"
                                fill="#FFFAF0" />
                        </svg>
                        <%= t 'team.new.create'%>
                    </button>
            </span>
            </a>

            </span>
        </div>

    </div>
    <div id="teams">
        <%= render partial: "team/partials/index" %>
    </div>
    <!-- /End replace -->
</div>