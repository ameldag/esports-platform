<div class="relative bg-black pt-0 pb-0 px-0 sm:px-0 lg:pt-0 lg:pb-0 lg:px-0 h-full">

    <div class="z-0 header w-full relative h-64">
        <!-- <div class="cover"> -->
        <img src="<%= url_for(@team.cover) %>"
            alt="" class="object-cover h-60 w-full">
        <!-- </div> -->
        <div class="overlay absolute top-0 left-0 bottom-0 right-0 dark-gradient" style="background: linear-gradient(rgba(17,18,23,0),#000);">

        </div>
    </div>

    <div class="z-10 relative w-full team-infos grid grid-cols-3 -mt-40 text-white">
        <div class="col-span-3 mb-5">
            <div class=" flex flex-wrap justify-center content-center">
                <img src="<%= url_for(@team.avatar) %>" alt=""
                    class="h-36 w-36 rounded-lg border-4">
            </div>
            <div class=" flex flex-wrap justify-center content-center text-3xl text-white font-bold">
                <%= @team.name %>
            </div>
        </div>

    </div>

    <div class="bg-purple-900 py-2 my-5 px-5">

        <div class="hidden sm:block">
            <nav class="flex">
                <a href="#"
                @click.prevent="set_tab_name('overview')"
                    class="px-3 py-2 font-medium text-sm leading-5 rounded-md text-gray-200 hover:bg-purple-800">
                    Overview
                </a>
                <a href="#"
                @click.prevent="set_tab_name('members')"
                    class="ml-4 px-3 py-2 font-medium text-sm leading-5 rounded-md text-gray-200 hover:bg-purple-800">
                    Members
                </a>
                <a href="#"
                @click.prevent="set_tab_name('stats')"
                    class="ml-4 px-3 py-2 font-medium text-sm leading-5 rounded-md text-gray-200 hover:bg-purple-800">
                    Stats
                </a>
            </nav>
        </div>

    </div>

    <div class="bg-black text-white py-5 px-10">

        <div v-if="this.tabname == this.memberstab">
        <members />
        </div>

        <div v-if="this.tabname == this.statstab">
        <stats />
        </div>

        <div v-if="this.tabname == this.overviewtab">
        <overview />
        </div>

    </div>

</div>
