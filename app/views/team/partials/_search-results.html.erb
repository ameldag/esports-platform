<% if (@results.count > 0) %>

<div class="min-h-screen max-w-7xl mx-auto px-4 sm:px-6 md:px-2 py-10">

    <div class="mt-2 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none">
        <% 1.times do %>
        <% @results.each do |result| %>
        <div
            class="bg-black rounded-md overflow-hidden shadow-md transform hover:scale-110 transition duration-150 ease-in-out">
            <div class="team-cover relative">

                <% if result.cover.attached? %>
                <img src="<%= url_for(result.cover) %>" alt="" class="h-40 w-full object-cover">
                <% else %>
                <img src="/images/icons/no-game.png" alt="" class="h-40 w-full object-cover">
                <% end %>

                <div class="absolute top-0 left-0 bottom-0 right-0"
                    style="background: linear-gradient(rgba(17,18,23,0),#000);">
                </div>
            </div>

            <div class="flex-1 bg-black p-3 flex flex-col justify-between">
                <div class="mt-0 flex items-center">
                    <div class="flex-shrink-0">
                        <a href="<%= show_team_path(result) %>">
                            <% if result.avatar.attached? %>
                            <img class="h-10 w-10 rounded-full" src="<%= url_for(result.avatar) %>" alt="" />
                            <% else %>
                            <img class="h-10 w-10 rounded-full object-cover" src="/images/icons/no-game.png" alt="" />
                            <% end %>
                        </a>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm leading-5 font-bold text-gray-200">
                            <a href="<%= show_team_path(result) %>" class="">
                                <%= result.name %>
                            </a>
                        </p>
                        <div class="flex text-sm leading-5 text-gray-500">
                            <time datetime="2020-03-16">
                                Joined on <%= result.created_at.strftime("%F") %>
                            </time>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>

</div>
<% else %>
<div class="min-h-screen max-w-7xl mx-auto px-4 sm:px-6 md:px-2 py-10 flex  justify-center content-center">
    <div class=" mx-auto lg:grid-cols-4 lg:max-w-none">

        <h3 class="text-white font-bold text-1xl mb-2 lg:col-span-2"> No results
        </h3>

        <span class="text-white font-bold text-1xl mb-2 lg:col-span-2"> Please make sure your words are
            spelled correctly.</span>
    </div>

</div>
<% end %>