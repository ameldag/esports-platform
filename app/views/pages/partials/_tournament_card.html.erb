<!-- TOURNAMENT BLOCK -->
<div class="flex flex-col overflow-hidden transform hover:scale-110 transition duration-150 ease-in-out">

  <% if (tournament.created_at > 1.week.ago) %>
  <div
    class="badge bg-red-600 uppercase text-xs rounded-full shadow py-0 px-2 pb-0.5 text-gray-200 font-bold absolute top-2 right-2">
    <%= t 'tournaments.stats.new'%>
  </div>
  <% end %>

  <div class="flex-shrink-0 rounded-lg shadow-lg overflow-hidden">
    <% if tournament.cover.attached? %>
    <img class="h-48 w-full object-cover" src="<%= url_for(tournament.cover) %>" alt="" />
    <% else %>
    <img class="h-48 w-full object-cover" src="/images/icons/no-game.png" alt="" />
    <% end %>
  </div>

  <time class="uppercase text-xs text-gray-500 font-bold mt-1">
    Today 18:30
  </time>

  <h3 class="uppercase text-sm text-gray-200 font-bold mb-0">
    <a href="<%= show_tournament_path(tournament.slug) %>">
      <%= tournament.name %>
    </a>
    <span
      class="inline-flex items-center px-3 py-0.5 rounded-full text-xs font-medium leading-5 bg-purple-800 text-purple-100">
      <%= tournament.slots %>
      <%= t 'tournaments.slots'%>
    </span>
  </h3>

  <p class="uppercase text-xs text-gray-500 font-bold">
    EU &bull; 1v1
    <% if tournament.prize %>
    EU &bull; $<%= tournament.prize%>
    <% end %>

  </p>
</div>
<!-- TOURNAMENT BLOCK END -->