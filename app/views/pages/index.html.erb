<div
    class="relative bg-gray-50 pt-0 pb-0 px-0 sm:px-0 lg:pt-0 lg:pb-0 lg:px-0"
  >
    <!-- TOP HOME COVER -->

    <div class="relative bg-gray-800 mt-0 mb-0">
      <div class="h-72 sm:h-72 md:absolute md:left-0 md:h-full md:w-full">
        <img
          class="w-full h-full object-cover"
          src="http://getwallpapers.com/wallpaper/full/6/5/6/547014.jpg"
          alt="Support team"
        />
      </div>
      
      <div class="overlay absolute top-0 left-0 bottom-0 right-0 dark-gradient"
      style="background: linear-gradient(rgba(17,18,23,0),#000);">

  </div>
  
      <div
        class="relative w-full mx-0 py-12 bg-dark-gradient lg:py-16"
      >
        <div class="md:ml-auto md:w-full pt-60 px-5 mt-0">
          <h2
            class="mt-0 text-white text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl sm:leading-10"
          >
            Counter-Strike : Global Offensive
          </h2>
        </div>
      </div>
      
    </div>

    <div class="relative w-full mx-0 px-5 bg-black">
      <!-- Brows Games Part -->
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
          <h2
            class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10"
          >
            Browse Games
          </h2>
        </div>
      </div>

      <div
        class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-<%= @games.count %> lg:max-w-none"
      >
        <% @games.each do |game| %>
          <div
            class="flex flex-col rounded-lg shadow-lg overflow-hidden transform hover:scale-110 transition duration-150 ease-in-out"
          >
            <div class="flex-shrink-0">
              <a href="<%= show_game_path(game.id) %>">
              <% if game.card.present? %>
              <img
                class="h-64 w-full object-cover"
                src="<%= url_for(game.card) %>"
                alt=""
              />
              <% else %>
              <img
                class="h-64 w-full object-cover"
                src="/images/icons/no-game.png"
                alt=""
              />
              <% end %>
            </a>
            </div>
          </div>
        <% end %>

      </div>

      <!-- Recommended Tournaments -->

      <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
          <h2
            class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10"
          >
            Recommended Tournaments
          </h2>
        </div>
      </div>

      <div
        class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none"
      >
        <% 8.times do %>
        <div
          class="flex flex-col overflow-hidden transform hover:scale-110 transition duration-150 ease-in-out">
          <div class="flex-shrink-0 rounded-lg shadow-lg overflow-hidden">
            <img
              class="h-34 w-full object-cover"
              src="https://dmarket.com/blog/best-dota2-wallpapers/thronedota2_hu86556be67ed8227140fc57b4b574d8ea_865668_1920x1080_resize_q75_lanczos.jpg"
              alt=""
            />
          </div>

          <time class="uppercase text-xs text-gray-500 font-bold mt-1">
            Today 18:30
          </time>

          <h3 class="uppercase text-sm text-gray-800 font-bold mb-0">
            Tournament Name
            <span
              class="inline-flex items-center px-3 py-0.5 rounded-full text-xs font-medium leading-5 bg-purple-800 text-purple-100"
            >
              16 Slots
            </span>
          </h3>

          <p class="uppercase text-xs text-gray-500 font-bold">
            EU &bull; 1v1
          </p>
        </div>
        <% end %>

      </div>

      <!-- Banner teaser -->

      <div
        class="relative bg-gray-800 rounded-lg shadow-lg overflow-hidden mt-7 mb-4"
      >
        <div
          class="h-36 bg-indigo-600 sm:h-36 md:absolute md:left-0 md:h-full md:w-1/2"
        >
          <img
            class="w-full h-full object-cover"
            src="https://wallpapertag.com/wallpaper/full/9/c/a/475815-widescreen-counter-strike-source-wallpaper-1920x1080.jpg"
            alt="Support team"
          />
        </div>
        <div
          class="relative max-w-screen-xl mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-16"
        >
          <div class="md:ml-auto md:w-1/2 md:pl-10">
            <h2
              class="mt-0 text-white text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl sm:leading-10"
            >
              eSports on Demand
            </h2>
            <p class="mt-3 text-lg leading-7 text-gray-300">
              Your favorite games, favorite tournaments, anywhere, anytime
            </p>
          </div>
        </div>
      </div>

      <!-- Tournaments with Big Prizes -->

      <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
          <h2
            class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10"
          >
            Recommended with Big Prizes
          </h2>
        </div>
      </div>

      <div
        class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none"
      >
        <% 4.times do %>
        <div
          class="flex flex-col overflow-hidden transform hover:scale-110 transition duration-150 ease-in-out"
        >
          <div class="flex-shrink-0 rounded-lg shadow-lg overflow-hidden">
            <img
              class="h-34 w-full object-cover"
              src="https://dmarket.com/blog/best-dota2-wallpapers/thronedota2_hu86556be67ed8227140fc57b4b574d8ea_865668_1920x1080_resize_q75_lanczos.jpg"
              alt=""
            />
          </div>

          <time class="uppercase text-xs text-gray-500 font-bold mt-1">
            Today 18:30
          </time>

          <h3 class="uppercase text-sm text-gray-800 font-bold mb-0">
            Tournament Name
            <span
              class="inline-flex items-center px-3 py-0.5 rounded-full text-xs font-medium leading-5 bg-purple-800 text-purple-100"
            >
              16 Slots
            </span>
          </h3>

          <p class="uppercase text-xs text-gray-500 font-bold">
            EU &bull; 1v1
          </p>
        </div>
        <% end %>
      </div>

      <!-- Ongoing Tournaments -->

      <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
          <h2
            class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10"
          >
            Ongoing Tournaments
          </h2>
        </div>
      </div>

      <div
        class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none pb-10"
      >
        <% 4.times do %>
        <div
          class="flex flex-col overflow-hidden transform hover:scale-110 transition duration-150 ease-in-out"
          v-for="n in 4"
          v-bind:key="n"
        >
          <div class="flex-shrink-0 rounded-lg shadow-lg overflow-hidden">
            <img
              class="h-34 w-full object-cover"
              src="https://dmarket.com/blog/best-dota2-wallpapers/thronedota2_hu86556be67ed8227140fc57b4b574d8ea_865668_1920x1080_resize_q75_lanczos.jpg"
              alt=""
            />
          </div>

          <time class="uppercase text-xs text-gray-500 font-bold mt-1">
            Today 18:30
          </time>

          <h3 class="uppercase text-sm text-gray-800 font-bold mb-0">
            Tournament Name
            <span
              class="inline-flex items-center px-3 py-0.5 rounded-full text-xs font-medium leading-5 bg-purple-800 text-purple-100"
            >
              16 Slots
            </span>
          </h3>

          <p class="uppercase text-xs text-gray-500 font-bold">
            EU &bull; 1v1
          </p>
        </div>
        <% end %>
      </div>
    </div>
  </div>