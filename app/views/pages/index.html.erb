<div class="relative bg-black pt-2 pb-2 px-0 sm:px-0 lg:pt-0 lg:pb-0 lg:px-2">
  <!-- TOP HOME COVER -->
  <% if (@featured.present?) %>
  <div class="relative bg-gray-800 mt-0 mb-0">
    <div class="h-72 sm:h-72 md:absolute md:left-0 md:h-full md:w-full">
      <% if (@featured.present? and @featured.cover.attached?) %>
      <img class="w-full object-cover" src="<%= url_for(@featured.cover) %>" alt="" />
      <% else %>
      <img class="w-full h-full object-cover" src="/images/icons/no-game.png" alt="" />
      <% end %>
    </div>

    <div class="overlay absolute top-0 left-0 bottom-0 right-0 dark-gradient"
      style="background: linear-gradient(rgba(17,18,23,0),#000);">

    </div>

    <div class="relative w-full mx-0 pt-0 bg-dark-gradient lg:pt-0">
      <div class="md:ml-auto md:w-full pt-0 px-0 mt-0">
        <a href="<%= show_game_path(@featured.tournament.game.id) %>">
          <% if @featured.tournament.game.card.present? %>
          <div class="bg-cover h-3/5	 bg-gray-900 object-cover shadow"
            style="background-image: url(<%= url_for(@featured.tournament.game.card) %>); background-size: cover;     height: 24rem;">
          </div>
          <% end %>
        </a>
        <h2 class="mt-5 text-white text-5xl leading-9 font-extrabold tracking-tight sm:text-4xl sm:leading-10">
          <%= @featured.name %>
        </h2>
      </div>
    </div>

  </div>
  <% end %>

  <div class="relative w-full mx-0 px-5 bg-black">
    <!-- Brows Games Part -->
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10">
          <%= t '.browse_games'%>
        </h2>
      </div>
    </div>

    <div class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-<%= @games.count %> lg:max-w-none">
      <% @games.each do |game| %>
      <div
        class="flex flex-col rounded-lg shadow-lg overflow-hidden transform hover:scale-110 transition duration-150 ease-in-out">
        <div class="flex-shrink-0">
          <a href="<%= show_game_path(game.id) %>">
            <% if game.card.present? %>
            <img class="h-64 w-full object-cover" src="<%= url_for(game.card) %>" alt="" />
            <% else %>
            <img class="h-64 w-full object-cover" src="/images/icons/no-game.png" alt="" />
            <% end %>
          </a>
        </div>
      </div>
      <% end %>

    </div>

    <!-- Recommended Tournaments -->

    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10">
          <%= t '.recommended'%>
        </h2>
      </div>
    </div>

    <div class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none">

      <% @tournaments.each do |tournament| %>
      <%= render "pages/partials/tournament_card", tournament: tournament %>
      <% end %>

    </div>

    <!-- Banner teaser -->

    <div class="relative bg-gray-800 rounded-lg shadow-lg overflow-hidden mt-7 mb-4">
      <div class="h-36 bg-indigo-600 sm:h-36 md:absolute md:left-0 md:h-full md:w-1/2">
        <img class="w-full h-full object-cover"
          src="https://wallpapertag.com/wallpaper/full/9/c/a/475815-widescreen-counter-strike-source-wallpaper-1920x1080.jpg"
          alt="Support team" />
      </div>
      <div class="relative max-w-screen-xl mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
        <div class="md:ml-auto md:w-1/2 md:pl-10">
          <h2 class="mt-0 text-white text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl sm:leading-10">
            <%= t '.banner_title'%>
          </h2>
          <p class="mt-3 text-lg leading-7 text-gray-300">
            <%= t '.banner_subtitle'%>
          </p>
        </div>
      </div>
    </div>

    <!-- Tournaments with Big Prizes -->

    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10">
          <%= t '.recommended_price'%>
        </h2>
      </div>
    </div>

    <div class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none">

      <% @big_prizes_tournaments.each do |tournament| %>
      <%= render "pages/partials/tournament_card", tournament: tournament %>
      <% end %>

    </div>

    <!-- Ongoing Tournaments -->
    <% if @ongoing_tournaments.count >0 %>
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-1xl font-bold leading-7 text-gray-400 sm:text-2xl sm:leading-9 sm:truncate mt-10">
          <%= t '.ongoing'%>
        </h2>
      </div>
    </div>

    <div class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none pb-10">
      <% @ongoing_tournaments.each do |tournament| %>
      <%= render "pages/partials/tournament_card", tournament: tournament %>
      <% end %>
    </div>
    <% end %>

  </div>
</div>