<%= render "game/partials/tab" %>
<div class="pr-10 px-10 bg-black">
    <!-- Past Tournaments -->
    <% if @past_tournaments.present? %>
    <div class="md:flex md:items-center md:justify-between mt-10">
        <h5 class=" flex-1 text-1xl font-bold leading-7 text-white sm:text-2xl sm:leading-9 sm:truncate ">
            <%= t "game.tournaments.past_tournament" %>
        </h5>
        <div id="paginate_ongoing" class="text-end font-bold text-teal-400 sm:ml-48 text-sm">
            <%= paginate @past_tournaments %>
        </div>
    </div>
<div class="mt-5 grid gap-5 max-w-lg mx-auto lg:grid-cols-4 lg:max-w-none pb-10">
    <% @past_tournaments.each do |tournament| %>
    <%= render "pages/partials/tournament_card", tournament: tournament %>
    <% end %>
</div>
    <% end %>
</div>